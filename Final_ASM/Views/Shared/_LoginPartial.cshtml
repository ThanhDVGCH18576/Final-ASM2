@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
        </ul>
    }
}
else
{
    <br />
    <ul class="nav  navbar-light bg-light navbar-right" style="margin-right:20px; margin-top:-5px;">
        <li style="margin-right:10px; margin-bottom:10px;">@Html.ActionLink("Register", "Register", "Account", null, new { @class = " btn  btn-success" })</li>
       <li>@Html.ActionLink("Log in", "Login", "Account", null, new { @class = " btn btn-primary btn-lg active" })</li>
