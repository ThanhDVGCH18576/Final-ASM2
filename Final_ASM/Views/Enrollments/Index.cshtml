@model IEnumerable<Final_ASM.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Assign Course</h2>
@if (User.Identity.IsAuthenticated)
{
<p>
    @Html.ActionLink("Create Assign", "Create", null, new { @class = " btn  btn-primary  " })
    
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            Trainee Name
        </th>
        <th>
            Trainer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>

            @if (User.Identity.IsAuthenticated)
            {
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }, new { @class = " btn  btn-warning  " }) |
            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }, new { @class = " btn  btn-info " }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID }, new { @class = " btn  btn-danger  " })


        </td>
            }
        </tr>
    }

</table>
